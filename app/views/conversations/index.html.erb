<h1>Conversations</h1>

  <div class="convos">
    <% @conversations.each do |conversation| %>
      <%= link_to conversation_messages_path(conversation), class: "div-link" do %>
        <div>
          <div class="convo-box">
            <p class="convo-p"><%= other_user(conversation) %></p>
            <div class="convo-text">
              <% if conversation.messages.last %>
                <p class="convo-p"><em>'<%= (conversation.messages.last.body) %>'</em></p>
              <% else %>
                <p class="convo-p"><em> No messages </em></p>  
              <% end %>
            </div > 
          </div>
        </div>  
      <% end %> 
    <% end %>
    <%= link_to new_conversation_path do %>
      <div>
        <div class="convo-box">
        <h4>New Conversation</h4>
        </div>
      </div>
    <% end %>
  </div>

