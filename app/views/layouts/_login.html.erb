<form class="login">
  <% if user_signed_in? %>
    Hello <strong> (<%= current_user.email %>)</strong>
    <!-- if the current user doesn't have a profile, we create one -->
    <% if current_user.profile.nil? %>
      <%= link_to('Profile', new_profile_path(current_user), class: "btn btn-primary") %> 
    <% else %>
    <!-- They do have a profile, so show it -->
      <%= link_to('Profile', profile_path(current_user), class: "btn btn-primary") %> 
    <% end %>
    <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-primary"  %>
  <% else %>
    <%= link_to('Sign up', new_user_registration_path, class: "btn btn-primary") %> 
    <%= link_to('Login', new_user_session_path, class: "btn btn-primary") %>
  <% end %>
</form>