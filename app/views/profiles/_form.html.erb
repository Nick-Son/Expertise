<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, id: :profile_first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, id: :profile_last_name %>
  </div>

  <div class="field">
    <%= form.label :bio %>
    <%= form.text_area :bio, id: :profile_bio %>
  </div>

  <!-- Add image option -->
  <div class="field">
    <%= form.label :avatar %>
    <%= form.file_field :avatar, id: :profile_avatar %>
  </div>
  
  <!-- Remove image option -->
  <div class="field">
    Remove attachment: <%= form.check_box :remove_avatar %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
